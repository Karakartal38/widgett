<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Hadis-i Serif"
        android:textSize="11sp"
        android:textColor="#7DCEA0"
        android:background="@drawable/badge_hadis"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="1 / 60"
        android:textSize="10sp"
        android:textColor="#55FFFFFF"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/hadis_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/badge"
        android:layout_marginTop="12dp"
        android:text="Ameller niyetlere goredir..."
        android:textSize="14sp"
        android:textColor="#EEFFFFFF"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="6"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Buhari"
        android:textSize="11sp"
        android:textColor="#CCC8A45C"
        android:maxLines="1"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/ravi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/source"
        android:layout_alignParentLeft="true"
        android:text="Hz. Omer (r.a.)"
        android:textSize="10sp"
        android:textColor="#66FFFFFF"
        android:maxLines="1" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bg"
        android:src="@android:drawable/ic_media_play"
        android:scaleType="centerInside"
        android:contentDescription="Sonraki"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
